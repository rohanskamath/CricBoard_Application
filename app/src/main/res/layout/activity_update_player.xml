<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgScreenColor"
    tools:context=".UpdatePlayerActivity">

    <EditText
        android:id="@+id/txtPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:fontFamily="@font/oswaldregular"
        android:hint="Enter player name"
        android:inputType="text"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgViewUpdatePhoto" />

    <Button
        android:id="@+id/btnUpdatePlayer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/round_buttons"
        android:text="Save Player Details"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="@color/main_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPlayerName"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgViewUpdatePhoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        android:background="@color/grey"
        android:padding="5dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circular"
        app:srcCompat="@drawable/baseline_person_outline_24"
        app:strokeColor="@color/main_color"
        app:strokeWidth="3dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatPlayerDPBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/round_button_float"
        android:contentDescription="@string/addplayerdp"
        android:src="@drawable/baseline_add_a_photo_24"
        app:backgroundTint="@color/main_color"
        app:fabCustomSize="45dp"
        app:layout_constraintEnd_toEndOf="@+id/imgViewUpdatePhoto"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="@+id/imgViewUpdatePhoto"
        app:layout_constraintTop_toTopOf="@+id/imgViewUpdatePhoto"
        app:shapeAppearance="@drawable/round_button_float"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>